<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.CodecInfo.AppBarLayout.PrimarySurface" parent="Widget.Material3Expressive.AppBarLayout">
        <item name="liftOnScroll">true</item>

        <!-- On newer API levels, hide shadows while keeping elevation. -->
        <item name="android:outlineAmbientShadowColor" tools:ignore="NewApi">@color/transparent</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">@color/transparent</item>
    </style>

    <style name="Widget.CodecInfo.ItemLayout" parent="">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:screenReaderFocusable" tools:targetApi="p">true</item>
    </style>

    <style name="Widget.CodecInfo.ItemLayout.ChildView" parent="">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="Widget.CodecInfo.NavigationRailView" parent="Widget.Material3Expressive.NavigationRailView">
        <item name="backgroundTint">?attr/colorPrimarySurface</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.CodecInfo.NavigationRailView</item>
    </style>

    <style name="Widget.CodecInfo.Toolbar.PrimarySurface" parent="Widget.Material3Expressive.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

</resources>