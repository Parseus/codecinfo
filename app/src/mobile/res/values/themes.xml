<resources>
    <style name="Theme.CodecInfo.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_600</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/purple_600</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        <item name="postSplashScreenTheme">@style/Theme.CodecInfo</item>
    </style>

    <style name="Theme.CodecInfo" parent="Base.Theme.CodecInfo">
        <item name="colorPrimary">@color/purple_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_600</item>
        <item name="colorSecondaryContainer">@color/teal_100</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/red_600</item>
    </style>

    <style name="Base.Theme.CodecInfo" parent="Platform.Theme.CodecInfo">
        <item name="navigationRailStyle">@style/Widget.CodecInfo.NavigationRailView</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="settingsIconColor">?android:attr/textColorSecondary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Platform.V23.Theme.CodecInfo" parent="Theme.Material3Expressive.DynamicColors.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>
    <style name="Platform.Theme.CodecInfo" parent="Platform.V23.Theme.CodecInfo" />
    
    <style name="ThemeOverlay.CodecInfo.NavigationRailView" parent="">
        <item name="colorOnSurface">@color/m3_ref_palette_neutral95</item>
        <item name="colorOnSurfaceVariant">@color/m3_ref_palette_neutral_variant70</item>
    </style>
</resources>